<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QUIZZZ"
        android:textSize="40dp"
        android:gravity="center_horizontal"
        android:id="@+id/title_quiz"
        android:textColor="@color/white"
        android:textStyle="bold"
    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_quiz"
        android:text="Question 1 of 4"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:id="@+id/question_progress"
        android:textColor="@color/white"
    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Which is the best school?"
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:id="@+id/question"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_below="@id/question_progress"
        android:layout_marginTop="70dp"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="50dp"
        android:orientation="vertical"
        android:id="@+id/options"
    >

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BELFIORE"
            android:layout_marginVertical="10dp"
            android:textSize="20dp"
            android:id="@+id/option_1"
            app:cornerRadius="10dp"
            app:strokeColor="@color/purple_200"
        />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ITIS"
            android:layout_marginVertical="10dp"
            android:textSize="20dp"
            android:id="@+id/option_2"
            app:cornerRadius="10dp"
            app:strokeColor="@color/purple_200"
        />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carlo d'arco"
            android:layout_marginVertical="10dp"
            android:textSize="20dp"
            android:id="@+id/option_3"
            app:cornerRadius="10dp"
            app:strokeColor="@color/purple_200"
        />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="artistico"
            android:layout_marginVertical="10dp"
            android:textSize="20dp"
            android:id="@+id/option_4"
            app:cornerRadius="10dp"
            app:strokeColor="@color/purple_200"
            android:padding="5dp"
        />


    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Necst"
        android:textSize="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/next_question"
        android:backgroundTint="@color/design_default_color_secondary"
    />


</RelativeLayout>